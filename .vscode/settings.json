{
  "files.exclude": {
    "**/*.css": {
      "when": "$(basename).scss"
    },
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*?.js": {
      "when": "$(basename).tsx"
    },
    "**/*.lock.json": true,
    "**/*.map": {
      "when": "$(basename)"
    },
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.tmp": true,
    "**/bin/**": true,
    "**/obj/**": true
  },
  "editor.formatOnSave": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
